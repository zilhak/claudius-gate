{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ES2022",
    "target": "ES2022",
    "noEmit": false,
    "outDir": "dist",
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/main/**/*"]
}